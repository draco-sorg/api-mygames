{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "rootDir": "./src",
    "baseUrl": "./src/",
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "/src/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["./node_modules", "./dist"]
}
